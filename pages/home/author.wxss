.author-view {
  height: 100%;
  /* width: 100%; */
  display: flex;
  flex-direction: column;
}

.base {
  margin: 30rpx 30rpx;
  height: 500rpx;
  border: 1px solid #00b7ee;
  display: flex;
  flex-direction: column;
  border-radius: 5rpx;
}

.userinfo {
  margin-left: 0rpx;
  margin-right: 0rpx;
  background-color: #00b7ee;
  height: 400rpx;
  display: flex;
  flex-direction: column;
}

.icon-image {
  margin-left: auto;
  margin-right: auto;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-top: 100rpx;
}

.nickName {
  text-align: center;
  color: white;
  flex: 1;
}

.tip-text {
  text-align: center;
  font-size: 29rpx;
  margin: auto 40rpx;
  color: #9f9f9f;
}

.author-btn {
  color: white;
  background-color: #00b7ee;
  margin-top: 100rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
